#!/usr/bin/env python
"""
Initial index setup for searchat.

This script creates the initial search index by scanning all Claude Code
and Mistral Vibe conversation files. It's safe to run on first setup and
provides interactive options for existing indexes.

Usage:
    setup-index [--force]

Options:
    --force    Force rebuild of existing index (WARNING: replaces all data)
"""

import sys
import logging
from pathlib import Path
from searchat.config import Config, PathResolver
from searchat.core.indexer import ConversationIndexer

# Configure logging
logging.basicConfig(
    level=logging.INFO,
    format='%(asctime)s - %(levelname)s - %(message)s'
)


def main():
    print("=" * 70)
    print("Searchat - Initial Index Setup")
    print("=" * 70)
    print()

    # Check for --force flag
    force = '--force' in sys.argv

    try:
        # Load configuration
        print("Loading configuration...")
        config = Config.load()
        search_dir = PathResolver.get_shared_search_dir(config)

        print(f"Search directory: {search_dir}")
        print(f"Data directory: {search_dir}/data")
        print()

        # Create indexer
        print("Initializing indexer...")
        indexer = ConversationIndexer(search_dir, config)

        # Check if index already exists
        has_index = indexer._has_existing_index()

        if has_index and not force:
            print("⚠ Existing index detected!")
            print()
            print(f"Index location: {search_dir}/data")
            print()
            print("Options:")
            print("  1. Keep existing index and add only new conversations (SAFE)")
            print("  2. Rebuild entire index from scratch (WARNING: replaces all data)")
            print("  3. Exit without changes")
            print()

            while True:
                choice = input("Enter your choice (1/2/3): ").strip()
                if choice == '1':
                    print()
                    print("Using safe append-only indexing...")
                    use_append_only = True
                    break
                elif choice == '2':
                    print()
                    confirm = input("Are you sure? This will replace all indexed data. Type 'yes' to confirm: ").strip()
                    if confirm.lower() == 'yes':
                        force = True
                        use_append_only = False
                        break
                    else:
                        print("Cancelled.")
                        return
                elif choice == '3':
                    print("Exiting without changes.")
                    return
                else:
                    print("Invalid choice. Please enter 1, 2, or 3.")
        else:
            use_append_only = False

        # Build index
        if use_append_only:
            print("Finding new conversations to index...")
            print()

            # Get all conversation files
            all_files = []
            claude_dirs = PathResolver.resolve_claude_dirs(config)

            for claude_dir in claude_dirs:
                if not claude_dir.exists():
                    continue
                for jsonl_file in claude_dir.rglob("*.jsonl"):
                    all_files.append(str(jsonl_file))

            # Get already indexed files
            indexed_paths = indexer.get_indexed_file_paths()

            # Find new files
            new_files = [f for f in all_files if f not in indexed_paths]

            print(f"Total conversation files: {len(all_files)}")
            print(f"Already indexed: {len(indexed_paths)}")
            print(f"New files to index: {len(new_files)}")
            print()

            if not new_files:
                print("✓ No new conversations to index. Your index is up to date!")
                print()
                print("You can now start the web server with:")
                print("  searchat-web")
                return

            print("Indexing new conversations...")
            print("This may take a few minutes depending on the number of conversations.")
            print()

            stats = indexer.index_append_only(new_files)

            print()
            print("=" * 70)
            print("Index Update Complete!")
            print("=" * 70)
            print(f"New conversations indexed: {stats.new_conversations}")
            print(f"Index time: {stats.update_time_seconds:.2f} seconds")
            print()

        else:
            # Full rebuild
            print("Building index from all conversation files...")
            print("This may take a few minutes depending on the number of conversations.")
            print()

            stats = indexer.index_all(force=force)

            print()
            print("=" * 70)
            print("Index Build Complete!")
            print("=" * 70)
            print(f"Total conversations: {stats.total_conversations}")
            print(f"Total messages: {stats.total_messages}")
            print(f"Index time: {stats.index_time_seconds:.2f} seconds")
            print(f"Parquet size: {stats.parquet_size_mb:.2f} MB")
            print(f"FAISS index size: {stats.faiss_size_mb:.2f} MB")
            print()

        print("You can now start the web server with:")
        print("  searchat-web")

    except RuntimeError as e:
        print()
        print("Error:", str(e))
        print()
        if "Existing index detected" in str(e):
            print("To rebuild anyway, run:")
            print("  setup-index --force")
        sys.exit(1)

    except FileNotFoundError as e:
        print()
        print("Error:", str(e))
        print()
        print("Please ensure Claude Code or Mistral Vibe conversation directories exist")
        print("and are configured correctly in your settings.")
        sys.exit(1)

    except Exception as e:
        print()
        print("Unexpected error:", str(e))
        import traceback
        traceback.print_exc()
        sys.exit(1)


if __name__ == "__main__":
    main()
